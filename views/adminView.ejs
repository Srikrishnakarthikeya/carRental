<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin View</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #218838;
        }

        @media (max-width: 600px) {
            table {
                font-size: 14px;
            }

            th, td {
                padding: 10px;
            }

            button {
                padding: 6px 10px;
            }
        }
    </style>
</head>
<body>
    <h1>Pending Deletion Requests</h1>
    <table>
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>Phone Number</th>
                <th>Booking Date</th>
                <th>Time Slot</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% deletedBookings.forEach(function(deletedBooking) { %>
                <tr>
                    <td><%= deletedBooking.car.make %></td>
                    <td><%= deletedBooking.car.model %></td>
                    <td><%= deletedBooking.car.year %></td>
                    <td><%= deletedBooking.customer.phoneNumber %></td>
                    <td><%= deletedBooking.bookingDate.toDateString() %></td>
                    <td><%= deletedBooking.timeSlot %></td>
                    <td>
                        <form action="/approve-delete/<%= deletedBooking._id %>" method="POST">
                            <button type="submit">Approve Deletion</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
