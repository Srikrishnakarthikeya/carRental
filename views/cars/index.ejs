<!DOCTYPE html>
<html>
<head>
  <title>All Cars</title>
</head>
<body>
  <h1>All Cars</h1>
  <a href="/cars/new">Add New Car</a>
  <table>
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Registration Number</th>
        <th>Rent Rate</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% cars.forEach(car => { %>
        <tr>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.registrationNumber %></td>
          <td><%= car.rentRate %></td>
          <td>
            <a href="/cars/edit/<%= car._id %>">Edit</a>
            <form action="/cars/delete/<%= car._id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
