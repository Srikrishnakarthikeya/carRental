<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* CSS styles */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .dashboard-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            color: #333;
        }
        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        .card h3 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
        }
        .chart-container {
            position: relative;
            height: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="dashboard-title">Restaurant Dashboard</h2>
        
        <div class="cards">
            <div class="card">
                <h3>Restaurant Rank</h3>
                <p>Rank: 5</p>
            </div>
            <div class="card">
                <h3>Total Purchases</h3>
                <p>Total: $5000</p>
            </div>
            <div class="card">
                <h3>Total Expenses</h3>
                <p>Total: $3000</p>
            </div>
            <div class="card">
                <h3>Total Menu Items</h3>
                <p>Total: 50</p>
            </div>
        </div>

        <div class="cards">
            <div class="card" style="grid-column: span 2;">
                <h3>Booking Statistics</h3>
                <div class="chart-container">
                    <canvas id="bookingChart"></canvas>
                </div>
            </div>
            <div class="card" style="grid-column: span 2;">
                <h3>Revenue Trends</h3>
                <div class="chart-container">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
            <div class="card" style="grid-column: span 2;">
                <h3>Popular Dishes</h3>
                <div class="chart-container">
                    <canvas id="dishesChart"></canvas>
                </div>
            </div>
            <div class="card">
                <h3>Customer Satisfaction</h3>
                <div class="chart-container">
                    <canvas id="satisfactionChart"></canvas>
                </div>
            </div>
            <div class="card">
                <h3>Employee Performance</h3>
                <div class="chart-container">
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>
            <div class="card">
                <h3>Inventory Status</h3>
                <div class="chart-container">
                    <canvas id="inventoryChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Inline JavaScript to hold dynamic data
        const totalBooked = <%= totalBooked %>;
        const totalServed = <%= totalServed %>;
    
        // JavaScript for creating the bar chart (Booking Statistics)
        const bookingCtx = document.getElementById('bookingChart').getContext('2d');
        const bookingChart = new Chart(bookingCtx, {
            type: 'bar',
            data: {
                labels: ['Total Booked', 'Total Served'],
                datasets: [{
                    label: 'Number of Orders',
                    data: [totalBooked, totalServed],
                    backgroundColor: ['#FFCE56', '#36A2EB'],
                    borderColor: ['#FFCE56', '#36A2EB'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Booking Statistics'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });


        // JavaScript for creating the line chart (Revenue Trends)
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                datasets: [{
                    label: 'Revenue',
                    data: [2000, 3000, 3500, 4000, 4500, 5000, 5500],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Revenue Trends'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // JavaScript for creating the bar chart (Popular Dishes)
        const dishesCtx = document.getElementById('dishesChart').getContext('2d');
        const dishesChart = new Chart(dishesCtx, {
            type: 'bar',
            data: {
                labels: ['Pizza', 'Burger', 'Pasta', 'Salad', 'Soup', 'Sandwich'],
                datasets: [{
                    label: 'Number of Orders',
                    data: [50, 40, 35, 45, 55, 60],
                    backgroundColor: '#FFCE56',
                    borderColor: '#FFCE56',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Popular Dishes'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // JavaScript for creating the radar chart (Customer Satisfaction)
        const satisfactionCtx = document.getElementById('satisfactionChart').getContext('2d');
        const satisfactionChart = new Chart(satisfactionCtx, {
            type: 'radar',
            data: {
                labels: ['Quality', 'Service', 'Value', 'Atmosphere', 'Cleanliness'],
                datasets: [{
                    label: 'Customer Satisfaction',
                    data: [4, 4.5, 4.2, 4.3, 4.6],
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    borderColor: 'rgba(255, 206, 86, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Customer Satisfaction'
                    }
                },
                scales: {
                    r: {
                        suggestedMin: 0,
                        suggestedMax: 5
                    }
                }
            }
        });

        // JavaScript for creating the radar chart (Employee Performance)
        const performanceCtx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(performanceCtx, {
            type: 'radar',
            data: {
                labels: ['Efficiency', 'Communication', 'Teamwork', 'Problem-solving', 'Adaptability'],
                datasets: [{
                    label: 'Employee Performance',
                    data: [4.2, 4.4, 4.3, 4.5, 4.6],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Employee Performance'
                    }
                },
                scales: {
                    r: {
                        suggestedMin: 0,
                        suggestedMax: 5
                    }
                }
            }
        });

        // JavaScript for creating the doughnut chart (Inventory Status)
        const inventoryCtx = document.getElementById('inventoryChart').getContext('2d');
        const inventoryChart = new Chart(inventoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['Available', 'Reserved', 'Out of stock'],
                datasets: [{
                    label: 'Inventory Status',
                    data: [70, 20, 10],
                    backgroundColor: ['#4CAF50', '#FFCE56', '#FF6384'],
                    hoverBackgroundColor: ['#4CAF50', '#FFCE56', '#FF6384']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Inventory Status'
                    }
                }
            }
        });
    </script>
</body>
</html>
